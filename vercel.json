{
  "version": 2,
  "buildCommand": "cd packages/backend && npm install && npm run build",
  "outputDirectory": "packages/backend/dist",
  "installCommand": "cd packages/backend && npm install",
  "framework": null,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index"
    }
  ],
  "functions": {
    "api/index.js": {
      "runtime": "nodejs20.x",
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}
