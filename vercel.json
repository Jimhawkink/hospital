{
    "version": 2,
    "framework": "vite",
    "installCommand": "cd packages/frontend && npm install",
    "buildCommand": "cd packages/frontend && npm run build",
    "outputDirectory": "packages/frontend/dist",
    "functions": {
        "api/**/*.ts": {
            "memory": 256,
            "maxDuration": 30
        }
    },
    "rewrites": [
        {
            "source": "/((?!api/|_vercel/|static/|favicon.ico).*)",
            "destination": "/index.html"
        }
    ]
}