{
    "version": 2,
    "buildCommand": "cd packages/frontend && npm install && npm run build",
    "outputDirectory": "packages/frontend/dist",
    "installCommand": "npm install",
    "framework": "vite",
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}