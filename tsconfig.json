{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": false,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "outDir": ".vercel/output",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "*": [
                "*"
            ]
        }
    },
    "include": [
        "api/**/*.ts",
        "packages/backend/src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "packages/frontend"
    ]
}