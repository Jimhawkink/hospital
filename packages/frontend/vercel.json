{
    "version": 2,
    "framework": "vite",
    "functions": {
        "api/**/*.ts": {
            "memory": 256,
            "maxDuration": 30
        }
    },
    "rewrites": [
        {
            "source": "/api/auth/login",
            "destination": "/api/auth/login"
        },
        {
            "source": "/((?!api/|_vercel/|static/|favicon.ico).*)",
            "destination": "/index.html"
        }
    ]
}